<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="PrismFeaturesReplacement.Views.MainPage"> 
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" VerticalOptions="Center"> 
            <Label FontSize="18" Text="Absolute Navigation?"/>
            <Switch IsToggled="{Binding IsAbsoluteNavigation}"/> 
            </HorizontalStackLayout>
            <Button 
                Text="Navigate to TabbedPage" 
                Command="{Binding NavigateCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView> 
</ContentPage>

